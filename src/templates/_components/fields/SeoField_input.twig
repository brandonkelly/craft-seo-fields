{% do view.registerAssetBundle("studioespresso\\seofields\\assetbundles\\SeoFieldAsset") %}

<div class="seofields-tabs">
    {% if field.tabs.general %}
        {% set tabSelected = false %}
        {% include 'seo-fields/_components/fields/_tabs/_general.twig'  %}
    {% endif %}
    {% if field.tabs.facebook %}
        {% set tabSelected = false %}
        {% include 'seo-fields/_components/fields/_tabs/_social.twig' with { tabSelected : tabSelected}  %}
    {% endif %}

    {% if (field.tabs.advanced is defined and field.tabs.advanced) %}
        {% set tabSelected = false %}
        {% include 'seo-fields/_components/fields/_tabs/_advanced.twig' with { tabSelected : tabSelected}  %}
    {% endif %}
</div>



{% set allSections = craft.app.sections.getAllSections() %}
{% if allSections|length %}
    <table class="data fullwidth collapsible">
        <thead>
        <tr>
            <th>{{ 'Section'|t('seo-fields') }}</th>
            <th>{{ 'Type'|t('seo-fields') }}</th>
        </tr>
        </thead>
        <tbody>

        {% set schemaSettings = data.schema|json_decode %}
        {% set sectionSettings = schemaSettings.sections %}
        {% for section in sections %}
            {% set settings = attribute(sectionSettings, section.id) ?? [] %}
            <tr>
                <th>{{ section.name }}</th>
                <td>
                    <div class="field">
                        <div class="input ltr">
                            <div class="select">
                                <select name="data[sections][{{ section.id }}]" id="">
                                    {% for class, label in options %}
                                    <option value="{{ class }}" {% if settings|length and settings == class %}selected{% endif %}>
                                        {{ label }}
                                    </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}